{
  "manifest_version": 3,
  "name": "Youtube MPV",
  "version": "1.0",
  "description": "play youtube with mpv",
  "permissions": ["nativeMessaging"],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["content-script.js"],
      "runAt": "document_end"
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  }
}
